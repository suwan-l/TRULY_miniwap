page{
  background: #fafafa;
}

.agent {
  background: #fafafa;
  height: 100vh;
}

.top {
  width: 690rpx;
  height: auto;
  margin: auto;
}

.info {
  display: flex;
  align-items: center;
  justify-content: flex-start;
}

.info-img {
  background: #fff;
  border: 4rpx solid #fff;
  border-radius: 50%;
  margin-left: 10rpx;
  display: block;
  box-shadow: 0 0 20rpx #d6eeee;
}

.info-img image {
  width: 120rpx;
  height: 126rpx;
  display: block;
}

.info-name {
  font-size: 48rpx;
  color: #555;
  margin-left: 60rpx;
}

.num {
  width: 100%;
  height: 100rpx;
  background: #fff;
  box-shadow: 0 0 20rpx #ebebeb;
  display: flex;
  align-items: center;
  justify-content: center;
  margin: 50rpx auto;
}

.person-num {
  font-size: 24rpx;
  color: #555;
  margin: 0rpx 80rpx;
}

.person-num text {
  font-size: 30rpx;
  color: #51c4c4;
  margin-left: 20rpx;
}

/**********切换标签**********/
.swiper-tab {
  width: 100%;
  text-align: center;
  line-height: 85rpx;
}

.swiper-tab-list {
  font-size: 30rpx;
  display: inline-block;
  width: 33.33%;
  color: #888;
  border-bottom: 1rpx solid #ccc;
}

.on {
  color: #51c4c4;
  border-bottom: 1rpx solid #51c4c4;
}

.swiper-box {
  display: block;
  height: 100%;
  width: 100%;
  overflow: hidden;
}

/*置顶样式*/
.small_navFix {
  width: 100%;
  height: auto;
  position: fixed;
  top: 0;
  left: 0;
  z-index: 20;
}

.conn {
  height: auto;
}

/*切换内容*/

.tab-conn {
  width: 100%;
  height: 150rpx;
  background: #fff;
  box-shadow: 0 0 20rpx #ebebeb;
  margin: 30rpx 0rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.tab-left {
  width: 85%;
  height: 100%;
  display: flex;
  align-items: center;
  justify-content: flex-start;
}

.tab-tx {
  width: 88rpx;
  height: 88rpx;
  border-radius: 100%;
  margin: 0rpx 30rpx;
}

.tab-tx image {
  width: 100%;
  height: 100%;
  display: block;
}

.tab-res text {
  font-size: 28rpx;
  color: #51c4c4;
  margin-right: 20rpx;
  margin-left: 10rpx;
}

.tab-bott {
  display: flex;
  align-items: center;
  justify-content: flex-start;
  margin-top: 10rpx;
}

.tab-bott text {
  font-size: 24rpx;
  color: #888;
}

.tab-address {
  margin-right: 30rpx;
}

.tab-right {
  margin-right: 30rpx;
}

.wish_list_box_collection image {
  width: 45rpx;
  height: 45rpx;
  position: relative;
  display: inline-block;
  vertical-align: middle;
}

.bottom {
  width: 100%;
  height: 80rpx;
  box-shadow: 0 0 20rpx #ebebeb;
  margin-bottom: 40rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.b1 {
  width: 80rpx;
  position: relative;
}

.b1 text {
  width: 10rpx;
  color: #888;
  display: block;
  position: absolute;
  top: 0rpx;
  left: 0rpx;
}
.b-num {
  width: 270rpx;
  text-align: center;
}
x-scroll-view {
height: calc(100% - 51px);
}