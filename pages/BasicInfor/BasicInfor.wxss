} 
.SkinTest_container{
  width:750rpx;
  padding:0;
  margin:0;
}
.SkinTest_bg image{
  width:100%;
  height:292rpx;
  display:block;
  position:absolute;
  top:0rpx;
  left:0rpx;
  z-index:0;
}
.SkinTest_top image{
  width: 688rpx;
  height:320rpx;
  display:block;
  margin-top:58rpx;
  position:relative;
  z-index:1;
  margin:58rpx auto;
}
.SkinTest_title{
  font-size: 34rpx;
  color: #2a9f93;
  line-height: 1;
  margin: 95rpx auto 70rpx;
  text-align: center;
  font-weight: bold;
  width: 100%;
  display: block;
}
.SkinTest_desc{
  width:90%;
  margin:auto;
  text-align:left;
  font-size:30rpx;
  color:#555555;
  letter-spacing: 2rpx;
}
.SkinTest_desc text{
  color:#2a9f93;
}
.SkinTest_btn{
  width:690rpx;
  height:98rpx;
  margin-top:140rpx;
  background:#51c4c4;
  color:#fff;
  font-size:36rpx;
