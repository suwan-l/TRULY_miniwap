/**********获取授权**********/
.header {
    margin: 90rpx 0 90rpx 50rpx;
    border-bottom: 1px solid #ccc;
    text-align: center;
    width: 650rpx;
    height: 300rpx;
    line-height: 450rpx;
}
.header image {
    width: 140rpx;
    height: 140rpx;
}
.content {
    margin-left: 50rpx;
    margin-bottom: 90rpx;
}
.content text {
    display: block;
    color: #9d9d9d;
    margin-top: 40rpx;
}
.bottom {
    border-radius: 80rpx;
    margin: 70rpx 50rpx;
    font-size: 35rpx;
}

/*container*/
.container{
  width:750rpx;
  /* height:100vh; */
  padding:0;
  margin:0;
  position:relative;
}
.register_bg{
  width:750rpx;
  height:470rpx;
  display:block;
}
.conn{
  width:690rpx;
  height:580rpx;
  margin:140rpx auto;
}

.info{
  width:100%;
  height:100rpx;
  display:flex;
  align-items: center;
  justify-content: space-between;
  border-bottom:1rpx solid #cccccc;
}
.info-left{
  width: 80%;
  display: flex;
  align-items: center;
  justify-content:flex-start;
}
.info image{
  width:70rpx;
  height:70rpx;
  display:block;
  margin:0rpx 22rpx;
  border-radius:50%;
}
.info-name{
  font-size:32rpx;
  color:#555555;
}
.info-tips{
  font-size:32rpx;
  color:#888;
}
.btn{
  width:150rpx;
  height:52rpx;
  display:block;
  background:#51c4c4;
  font-size:32rpx;
  color:#fff;
  padding:0;
  margin:0;
  line-height: 52rpx;
}
.register-btn{
  width:100%;
  height:98rpx;
  line-height:98rpx;
  background:#51c4c4;
  font-size:36rpx;
  color:#ffffff;
  margin-top:105rpx;
}

.changeInfoName{
  width:690rpx;
  height: 100rpx;
  line-height: 100rpx;
  position:relative;
  border-bottom:1rpx solid #cccccc;
  display:flex;
  align-items: center;
  justify-content: space-between;
}
.codeBtn{
 color: #ffffff;
 width: 180rpx;
 font-size: 32rpx;
 height: 52rpx;
 line-height: 52rpx;
 background:#51c4c4;
 padding:0;
 margin:0;
}
