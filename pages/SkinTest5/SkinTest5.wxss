/* pages/SkinTest2/SkinTest2.wxss */
page{
  background: -webkit-linear-gradient(left,#e8f2f2,#d4ecec);
	background: -o-linear-gradient(left,#e8f2f2,#d4ecec);
	background: -moz-linear-gradient(left,#e8f2f2,#d4ecec);
	background: -mos-linear-gradient(left,#e8f2f2,#d4ecec);
	background: linear-gradient(left,#e8f2f2,#d4ecec);
}
.container{
  width:750rpx;
  padding:0;
  margin:0;
}
.bg{
  width:100%;
}
.conn{
  width:690rpx;
  margin:44rpx auto;
  background:#f5f5f5;
  border:1rpx solid #d9d9d9;
  border-radius: 20rpx;
}
.step{
  font-size:30rpx;
  color:#313131;
  width:85%;
  margin:55rpx auto 100rpx;
  line-height:45rpx;
  font-weight: bold;
}
.step .txt1{
  color:#2a9f93;
  font-size:34rpx;
}
.step .txt2{
  color:#2a9f93;
  font-size:30rpx;
}

.answer{
  width:85%;
  border-top:1rpx solid #d9d9d9;
  margin:auto;
  clear: both;
}
.answer-num{
  width:90rpx;
  height:75rpx;
  position:relative;
}
.answer-num image{
  width:100%;
  height:100%;
  display:block;
  position:absolute;
  top:0rpx;
  left:0rpx;
}
.answer-num text{
  font-size: 30rpx;
  color:#ffffff;
  position:absolute;
  top:10rpx;
  left:22rpx;
}
.question{
  width:97%;
  margin:auto;
}
.ques-title{
  font-size:28rpx;
  color:#302f2f;
  margin-top:15rpx;
  box-sizing: border-box;
  display:block;
  font-weight: bold;
}
.ques-desc{
  width:100%;
  font-size:26rpx;
  color:#555555;
  box-sizing: border-box;
}
.ques-desc text{
  width:100%;
  padding:12rpx 15rpx;
  display:block;
  margin:25rpx auto;
  box-sizing: border-box;
}
.answer-idx{
  width:85%;
  font-size:24rpx;
  color:#2a9f93;
  text-align:right;
  display:block;
  margin:73rpx auto 10rpx;
}
.active{
  background:#51c4c4;
  color:#fff;
  border-radius: 10rpx;
}
.off{
  background: none;
}
.button{
  width:630rpx;
  margin:56rpx auto 125rpx;
  display: flex;
  align-items: center;
  justify-content: space-between
}
.button button{
  width:150rpx;
  height:52rpx;
  line-height: 52rpx;
  background:#51c4c4;
  color:#fff;
  font-size:32rpx;
  display:block;
  padding:0;
  margin:0;
}
.show{
  display:block;
}
.hidden{
  display:none;
}